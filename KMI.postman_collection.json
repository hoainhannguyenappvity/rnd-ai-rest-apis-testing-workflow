                  "pm.test(\"200 OK, returns exactly 1 user\", function () {",
                  "  pm.response.to.have.status(200);",
                  "  var jsonData = {};",
                  "  try { jsonData = pm.response.json(); } catch (e) {}",
                  "  var count = null;",
                  "  if (Array.isArray(jsonData)) { count = jsonData.length; }",
                  "  else if (jsonData && Array.isArray(jsonData.value)) { count = jsonData.value.length; }",
                  "  pm.expect(count, \"user count\").to.eql(1);",
