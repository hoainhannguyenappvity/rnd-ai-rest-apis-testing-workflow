      "item": [
        {
          "name": "Get Users - Valid",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v2/web/odata/SEPAOrgs/SE.GetUsers?$top=1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "v2",
                "web",
                "odata",
                "SEPAOrgs",
                "SE.GetUsers"
              ],
              "query": [
                {
                  "key": "$top",
                  "value": "1"
                }
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Expect success range 200-299",
                  "pm.test(\"Status code is 2xx\", function () {",
                  "    pm.expect(pm.response.code).to.be.above(199);",
                  "    pm.expect(pm.response.code).to.be.below(300);",
                  "});",
                  "",
                  "// Basic body presence check when content is returned",
                  "pm.test(\"Response body is JSON when present\", function () {",
                  "    if (pm.response.text()) {",
                  "        pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
