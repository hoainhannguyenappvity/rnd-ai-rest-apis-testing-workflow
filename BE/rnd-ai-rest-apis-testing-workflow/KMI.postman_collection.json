              "host": [
                "{{base_url}}"
              ],
              "path": [
                "v2",
                "web",
                "odata",
                "SEPAOrgs",
                "SE.GetUsers"
              ],
              "query": [
                {
                  "key": "$top",
                  "value": "1"
                }
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('TC-002: status is NOT 2xx for invalid method', function () {",
                  "  pm.expect(pm.response.code).to.not.be.within(200, 299);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "TC-003 | GET Users | unauthorized",
