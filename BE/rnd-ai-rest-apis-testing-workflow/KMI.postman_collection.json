{
  "info": {
    "name": "API-001: KMI Users Service",
    "description": "Automated tests for SE.GetUsers endpoint based on apis.md.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "KMI Users",
      "description": "Covers TC-001 to TC-003 for SE.GetUsers.",
      "item": [
        {
          "name": "TC-001 | GET Users | 2xx",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "{{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v2/web/odata/SEPAOrgs/SE.GetUsers?$top=1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "v2",
                "web",
                "odata",
                "SEPAOrgs",
                "SE.GetUsers"
              ],
              "query": [
                {
                  "key": "$top",
                  "value": "1"
                }
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('TC-001: status is 2xx', function () {",
                  "  pm.expect(pm.response.code).to.be.within(200, 299);",
                  "});",
                  "",
                  "pm.test('TC-001: JSON response when body present', function () {",
                  "  const body = pm.response.text();",
                  "  if (body && body.trim().length > 0) {",
                  "    pm.expect(pm.response.headers.get('Content-Type')).to.include('json');",
                  "  }",
                  "});"
                ]
              }
            }
          ]
        },
        {
